pipeline {
    agent { label 'slave_one' }

    stages {
        stage('Git clone') {
              steps {
                git branch: 'main',
                    credentialsId: 'Git',
                    url: 'https://github.com/Shyamjith06/debit_card_app.git'
            }
            }
         stage('Install Maven') {
              steps {
              script {
                    sh """
                    sudo apt update
                    sudo apt install maven -y
                  """
                  }
                }
                }
                
           stage('Build app') {
              steps {
              script {
                    sh """
                    cd ${WORKSPACE}/debit_card_app/project_code/
                    mvn clean install
                  """
                  }
                }
                }
        }
        }
