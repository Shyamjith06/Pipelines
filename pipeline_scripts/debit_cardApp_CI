pipeline {
    agent { label 'slave_one' }

    stages {
    
        stage('Cloning factory repo for Terrafom scripts') {
              steps {
              
                git branch: 'main',
                    credentialsId: 'Git',
                    url: 'https://github.com/Shyamjith06/factory.git'
            
            }
            
            }
         
       
      
          stage('Installing Mysql'){
              steps {
              
              withAWS(credentials: 'L-jenkinsuser', region: 'eu-west-1'){
              script {
                    sh """
                    cd ${WORKSPACE}/terraform/config/CI_Mysql_SetUp/
                        terraform init
                        terraform plan -var dbpass=${env.DB_PASS} --out=plan.out
                            
                        terraform ${params.terraform_option} -var dbpass=${env.DB_PASS} -auto-approve
                                              
                  """               
                  }
                  
                
                }
               }
               }
        stage('Cloning App Repo') {
              steps {
              
                git branch: 'master',
                    credentialsId: 'Git',
                    url: 'https://github.com/Shyamjith06/debit_card_app.git'
            
            }
            }
           stage('Build app') {
              steps {
              script {
            //  withEnv(["DB_HOST=${dbHost}"]) {
                    sh """
                    cd ${WORKSPACE}/project_code/
                    mvn clean install
                  """
             //     }
                }
                }
                
       }
       
        stage('Destroying resources ') {
              steps {
                script{
                """
                 git clone https://github.com/Shyamjith06/factory.git
                 cd ${WORKSPACE}/terraform/config/CI_Mysql_SetUp/
                     terraform init
                     terraform plan -var dbpass=${env.DB_PASS}
                     terraform destroy -var dbpass=${env.DB_PASS} -auto-approve
                """
            }
            }
       
        }
        
       } 
       }
