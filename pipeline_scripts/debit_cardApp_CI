def dbHost
pipeline {
    agent { label 'slave_one' }

    stages {
        stage('Cloning factory repo for Terrafom scripts') {
              steps {
                git branch: 'main',
                    credentialsId: 'Git',
                    url: 'https://github.com/Shyamjith06/factory.git'
            }
            }
      
          stage('Installing Mysql'){
              steps {
              withAWS(credentials: 'L-jenkinsuser', region: 'eu-west-1'){
              script {
                    sh """
                    cd ${WORKSPACE}/terraform/config/CI_Mysql_SetUp/
                        terraform init
                        terraform plan -var dbpass=${env.DB_PASS}
                            
                        terraform apply -var dbpass=${env.DB_PASS} -auto-approve
                  """
                  dbHost= readFile "${WORKSPACE}/terraform/config/CI_Mysql_SetUp/ip_addr.txt"
                
                  }
                }
                }
               }
        stage('Cloning App Repo') {
              steps {
                git branch: 'master',
                    credentialsId: 'Git',
                    url: 'https://github.com/Shyamjith06/debit_card_app.git'
            }
            }
           stage('Build app') {
              steps {
              script {
              withEnv(["DB_HOST=${dbHost}"]) {
                    sh """
                    cd ${WORKSPACE}/project_code/
                    mvn clean install
                  """
                  }
                }
                }
                }
        }
        }
        
